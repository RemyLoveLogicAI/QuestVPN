# WireGuard Configuration
# Copy this file to .env.west and .env.east and fill in your values

# Public hostname or IP address for this region
# Can be domain name (e.g., west.vpn.example.com) or IP address
WG_HOST=your-server-ip-or-domain

# Backup host for redundancy (other region)
WG_HOST_BACKUP=your-backup-server-ip-or-domain

# WireGuard ports
# Primary port (standard WireGuard)
WG_PORT=51820

# Alternate port (for networks that block 51820)
WG_PORT_ALT=443

# WireGuard dashboard password
# Generate strong password: openssl rand -base64 20
WG_DASHBOARD_PASS=your-strong-password-here

# Default DNS for peers (AdGuard Home internal IP)
# Do not change unless you modify the network topology
WG_DEFAULT_DNS=10.2.0.2

# Region identifier (west or east)
REGION_TAG=west

# AdGuard Home setup port
# After initial setup, firewall this port to VPN network only
ADGUARD_SETUP_PORT=3000

# Enable IPv6 support (true/false)
# Set to true if your server has IPv6 connectivity
ENABLE_IPV6=true

# WireGuard allowed IPs for peers
# Full tunnel: 0.0.0.0/0, ::/0 (all traffic)
# Split tunnel: specific networks only
WG_ALLOWED_IPS=0.0.0.0/0,::/0

# Persistent keepalive (seconds)
# Recommended: 25 for NAT traversal
WG_PERSISTENT_KEEPALIVE=25

# Docker network configuration
DOCKER_NETWORK=wg_net
DOCKER_SUBNET=10.2.0.0/24
DOCKER_GATEWAY=10.2.0.1

# Service IPs (static assignments)
WIREGUARD_IP=10.2.0.1
ADGUARD_IP=10.2.0.2
UNBOUND_IP=10.2.0.3

# Service versions (update periodically)
WG_EASY_VERSION=latest
ADGUARD_VERSION=latest
UNBOUND_VERSION=latest

# Optional: Cloudflare DDNS
# Get API token from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone:DNS:Edit for specific zone
CF_API_TOKEN=
CF_ZONE_ID=
CF_RECORD_NAME_WEST=west.vpn.example.com
CF_RECORD_NAME_EAST=east.vpn.example.com

# Optional: Monitoring
# Webhook URL for health check alerts (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=

# Optional: Timezone
TZ=UTC

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info
